@using ServiceManagment.Data.Enum
@model ServiceManagment.ViewModel.CreateOrderViewModel

@{
}

<form method="post" asp-action="Create">
    <input type="hidden" name="CustomerId" asp-for="CustomerId" />
    <div class="form-group">
        <label class="form-label">Product type</label>
        <select asp-for="Product.ProductType" asp-items="Html.GetEnumSelectList<ProductType>()"></select>
    </div>
    <div class="form-group">
        <label class="form-label">Producer name</label>
        <input type="text" asp-for="Product.ProducerName" class="form-control" placeholder="Producer name" />
        <span asp-validation-for="Product.ProducerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Model</label>
        <input type="text" asp-for="Product.Model" class="form-control" placeholder="Model" />
        <span asp-validation-for="Product.Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Serial number</label>
        <input type="text" asp-for="Product.SerialNumber" class="form-control" placeholder="Serial number" />
        <span asp-validation-for="Product.SerialNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Product fault</label>
        <input type="text" asp-for="Product.Fault" class="form-control" placeholder="Equipment fault" />
        <span asp-validation-for="Product.Fault" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Product description</label>
        <input type="text" asp-for="Product.Description" class="form-control" placeholder="Equipment description" />
    </div>
    <div class="form-group">
        <label class="form-label">Cost</label>
        <input type="number" step="0.1" asp-for="Payment.ToPay" class="form-control" placeholder="Cost" />
        <span asp-validation-for="Payment.ToPay" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create order</button>
</form>
