<form method="post" asp-action="EditOrderPayment">
    <div class="form-group">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="@Model.Id" readonly/>
    </div>
    <div class="form-group">
        <label class="form-label">Paid</label>
        <input type="text" class="form-control" asp-for="@Model.Paid" readonly/>
    </div>
    <div class="form-group">
        <label class="form-label">To pay</label>
        <input type="text" class="form-control" asp-for="@Model.ToPay"/>
    </div>

    <button type="submit" class="btn btn-danger">Save</button>
</form>

