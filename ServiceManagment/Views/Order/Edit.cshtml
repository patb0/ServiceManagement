@using ServiceManagment.Data.Enum
@model ServiceManagment.ViewModel.EditOrderViewModel

@{
}

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="@Model.Id" readonly/>
    </div>
    <div class="form-group">
        <label class="form-label">Owner</label>
        <input type="text" class="form-control" asp-for="@Model.CustomerName" readonly/>
    </div>
    <div class="form-group">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="@Model.OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
    </div>
    <div class="form-group">
        <label class="form-label">Type</label>
        <select class="form-control" asp-for="@Model.Product.ProductType" asp-items="Html.GetEnumSelectList<ProductType>()"></select>
    </div>
    <div class="form-group">
        <label class="form-label">Procuder name</label>
        <input class="form-control" asp-for="@Model.Product.ProducerName" />
        <span asp-validation-for="Product.ProducerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Model</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Model" />
        <span asp-validation-for="Product.Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Serial number</label>
        <input type="text" class="form-control" asp-for="@Model.Product.SerialNumber" />
        <span asp-validation-for="Product.SerialNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Fault</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Fault" />
        <span asp-validation-for="Product.Fault" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Description" />
    </div>
    <button type="submit" class="btn btn-danger">Save</button>
</form>
