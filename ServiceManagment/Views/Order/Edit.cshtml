@using ServiceManagment.Data.Enum
@model ServiceManagment.Models.Order

@{
}

<form method="post" asp-action="Edit">
    <div class="form-group">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="@Model.Id" readonly/>
    </div>
    <div class="form-group">
        <label class="form-label">Owner</label>
        <input type="text" class="form-control" asp-for="@Model.Customer.Name" readonly/>
    </div>
    <div class="form-group">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="@Model.OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatus>()"></select>
    </div>
    <div class="form-group">
        <label class="form-label">Type</label>
        <select class="form-control" asp-for="@Model.Product.ProductType" asp-items="Html.GetEnumSelectList<ProductType>()"></select>
    </div>
    <div class="form-group">
        <label class="form-label">Model</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Model" />
    </div>
    <div class="form-group">
        <label class="form-label">Serial number</label>
        <input type="text" class="form-control" asp-for="@Model.Product.SerialNumber" />
    </div>
    <div class="form-group">
        <label class="form-label">Fault</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Fault" />
    </div>
    <div class="form-group">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="@Model.Product.Description" />
    </div>
    <button type="submit" class="btn btn-danger">Save</button>
</form>
