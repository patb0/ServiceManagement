@model ServiceManagment.Models.Customer

@{
}

<html>
    <head>
       @* add meta*@
    </head>
    <body class="bg-dark text-white">
        <div class="text-center fs-1">
            <h1 class="display-3">Customer detail</h1>
        </div>
        <div class="container" style="margin-left: 20%; margin-top: 2%">
            <div class="row">
                <div class="col-md-3">
                    <label class="form-label">User ID</label>
                    <input type="text" class="form-control" asp-for="@Model.Id" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Added</label>
                    <input type="text" class="form-control" asp-for="@Model.UserAdded" readonly>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <a type="button" class="form-control btn btn-outline-success" asp-controller="Customer"
                        asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="form-label">User type</label>
                    <input type="text" class="form-control" asp-for="@Model.CustomerType" readonly>
                </div>  
                <div class="col-md-3">
                    <label class="form-label">User group</label>
                    <input type="text" class="form-control" asp-for="@Model.CustomerGroup" readonly>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <a type="button" class="form-control btn btn-outline-info" asp-controller="Customer"
                        asp-action="Orders" asp-route-id="@Model.Id">History</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="@Model.Name" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label">NIP</label>
                    <input type="text" class="form-control" asp-for="@Model.NIP" value="-" readonly>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <a type="button" class="form-control btn btn-outline-warning" asp-controller="Customer"
                        asp-action="Payment" asp-route-id="@Model.Id">Payments</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="form-label">Description</label>
                    <textarea type="text" class="form-control" asp-for="@Model.Description" style="resize: none" rows="4" readonly>
                    </textarea>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-12">
                            <label class="form-label">Email address</label>
                            <input type="text" class="form-control" asp-for="@Model.Contact.EmailAddress" readonly>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="form-label">Phone number</label>
                            <input type="text" class="form-control" asp-for="@Model.Contact.PhoneNumber" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Second number</label>
                            <input type="text" class="form-control" asp-for="@Model.Contact.SecondPhoneNumber" readonly>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <a type="submit" class="form-control btn btn-outline-danger" asp-controller="Customer"
                        asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="form-label">City</label>
                    <input type="text" class="form-control" asp-for="@Model.Address.City" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Postal code</label>
                    <input type="text" class="form-control" asp-for="@Model.Address.PostalCode" readonly>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <label class="form-label">Street</label>
                    <input type="text" class="form-control" asp-for="@Model.Address.Street" readonly>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Flat number</label>
                    <input type="text" class="form-control" asp-for="@Model.Address.FlatNumber" readonly>
                </div>
            </div>
        </div>
    </body>
</html>



