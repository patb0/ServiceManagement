@model IEnumerable<ServiceManagment.Models.Order>

@{
}

<html>
    <head>
		@*add meta*@
    </head>
    <body class="bg-dark text-white">
        <div class="text-center fs-1">
            <p class="display-6">Orders created by @User.Identity.Name</p>
        </div>
		<div class="row mb-5 text-left">
            <div class="form-group col-md-10 fs-1">
                <a type="button" class="btn btn-outline-success btn-sm" asp-controller="Worker" 
                asp-action="GetCustomers" asp-route-id="@User.GetUserId()">Customers</a>

                <a type="button" class="btn btn-outline-success btn-sm" asp-controller="Worker" 
                asp-action="GetOrders" asp-route-id="@User.GetUserId()">Orders</a>
            </div>
        </div>
		<table class="table text-white">
			<thead class="bg-white text-dark">
				<tr>
					<th>ID</th>
					<th>Added</th>
					<th>Name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var order in Model)
				{		
					<tr>
						<th scope="row">@order.Id</th>
						<td>@order.OrderAdded</td>
						<td>@order.Product.ProducerName @order.Product.Model</td>
						<td>
							<a type="button" class="btn btn-outline-success btn-sm" asp-controller="Order"
								asp-action="Detail" asp-route-id="@order.Id">Detail</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</body>
</html>
